<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#5D478B"
    tools:context=".activity.FuncSelectFaceRecogActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_funcselect_xml">

        <LinearLayout
            android:id="@+id/manage_fun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="欢迎使用Alive体测设备"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="计算机视觉AI体测设备"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/sports" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="还未录入人脸信息？开始录入吧"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp" />

            <!-- 人脸录入部分 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/face" />

                    <Button
                        android:id="@+id/startfaceinfomanage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="人脸信息库管理"
                        android:background="@drawable/button_background"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="信息已录入，选择内容开始体测吧！"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:gravity="center" />

            <!-- 选择部分 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#CDCDCD"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:padding="16dp"
                    android:alignmentMode="alignBounds"
                    android:background="@drawable/button_background_gray">

                    <!-- 第一行的第一个按钮 -->
                    <Button
                        android:id="@+id/button_pullup"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="引体向上"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <!-- 第一行的第二个按钮 -->
                    <Button
                        android:id="@+id/button_pushup"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="俯卧撑"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <!-- 第二行的第一个按钮 -->
                    <Button
                        android:id="@+id/button_crunch"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:text="仰卧起坐"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <!-- 第二行的第二个按钮 -->
                    <Button
                        android:id="@+id/button_situp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:text="深蹲"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </GridLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </ScrollView>

    <!-- 底部导航栏 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_funcselect_xml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemIconTint="@android:color/black"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>